<div class='container-fluid text-center'>
  <h1>Eat Da Burger!</h1>

  <div class='row'>
    <div class='col-4'>
      <h2>Not Devoured</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

    <div class='col-4'>
      <img id='main-image' src='/assets/img/burger.jpg' alt='A Burger'>
    </div>

    <div class='col-4'>
      <h2>Devoured</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>

    <div class="form-group form-check">
      <label for="devoured">Devoured?</label><br>
      <input type="radio" name="devoured" value="0" checked> Devoured!<br>
      <input type="radio" name="devoured" value="1"> Not Devoured
    </div>

    <button class='btn btn-info' type="submit">Add Burger</button>
  </form>
</div>